<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
    <li data-target="#carousel-example-generic" data-slide-to="2"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox">
    <div class="item active">
      <%= image_tag 'slider1.jpg' %>
      <div class="carousel-caption">
        Find the best restaurants in the world.
      </div>
    </div>
    <div class="item">
      <%= image_tag 'slider2.jpg' %>
      <div class="carousel-caption">
        Feel like Italian?
      </div>
    </div>
    <div class="item">
      <%= image_tag 'slider3.jpg' %>
      <div class="carousel-caption">
        Or something with a bit more of a kick?
      </div>
    </div>
  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
  </a>
  <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
  </a>
</div>


<h1><% @places.each do |place| %></h1>
  <div class="booyah-box col-xs-10 col-xs-offset-1">
    <h1><%= link_to place.name, place_path(place) %></h1>
    <i><%= place.address %></i><br><br>
    <p><%= place.description %></p><br>
    <br>

    <% place.photos.each do |photo| %>
    <div class="col-xs-12 col-sm-6">
      <%= image_tag photo.picture, :class => 'img-responsive' %>
      <div class="clear"></div>
      <small><i><%= photo.caption %></i></small>
      <div class="clear"></div>
      <br>
      <br>
    </div>
    <% end %>

  <div class="clear"></div>

    <% if place.user.present? %>
      <small><%= place.user.email %></small>
    <% end %>

  <% if place.comments.present? %>
    <div class="col-xs-12">
        <blockquote>
          <% if place.comments.last.humanized_rating.present? %>
            <b><%= place.comments.last.humanized_rating %></b> -
          <% end %>
          <%= place.comments.last.message %>
          <small><%= place.comments.last.user.email %></small>
        </blockquote>
      </div>
  <% end %>
  </div>
<% end %>

<div class="col-xs-10 col-xs-offset-1">
  <ul class="pagination">
    <li><%= will_paginate @places, renderer: BootstrapPagination::Rails %></li>
  </ul>
</div>
